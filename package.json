{
  "name": "ghost-tube",
  "version": "0.3.8",
  "description": "Enhanced YouTube TV app for webOS with Home Assistant integration",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "package": "ares-package -n dist",
    "deploy": "node tools/deploy.js",
    "inspect": "ares-inspect youtube.leanback.v4",
    "build-deploy": "node tools/build-deploy.js",
    "launch": "ares-launch youtube.leanback.v4",
    "manifest": "node tools/gen-manifest.cjs youtube.leanback.v4.manifest.json",
    "mcp:playwright": "npx @playwright/mcp --config playwright-mcp.config.json",
    "version": "node tools/sync-version.cjs && git add assets/appinfo.json",
    "prepare": "husky",
    "lint": "eslint",
    "type-check": "tsc -b",
    "prettier-check": "prettier --ignore-path .prettierignore --check ."
  },
  "repository": "github:shyndman/ghost-tube",
  "license": "GPL-3.0-only",
  "bugs": "https://github.com/shyndman/ghost-tube/issues",
  "homepage": "https://github.com/shyndman/ghost-tube#readme",
  "dependencies": {
    "mqtt": "^5.13.2",
    "tiny-sha256": "^1.0.2",
    "whatwg-fetch": "^3.6.20"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@babel/plugin-transform-typescript": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@eslint/js": "^9.29.0",
    "@playwright/mcp": "^0.0.31",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@types/babel__core": "^7.20.5",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^24.0.1",
    "@webos-tools/cli": "^3.2.1",
    "babel-loader": "^10.0.0",
    "babel-plugin-polyfill-corejs3": "^0.12.0",
    "babel-plugin-polyfill-regenerator": "^0.6.4",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-regexp": "^2.9.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.1",
    "postcss": "^8.5.5",
    "postcss-load-config": "^6.0.1",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.2.3",
    "prettier": "^3.5.3",
    "style-loader": "^4.0.0",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=22"
  }
}
